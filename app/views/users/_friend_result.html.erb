<div class="results-block">
  <%= render 'layouts/messages' %>
</div>
<% if @friends %>
  <div class="card card-header d-inline-block h-100  mt-4 mb-2 w-75">
    <table class="col-md-12">
      <tbody>
        <% @friends.each do |friend| %>
          <tr>
            <td><strong>Name: </strong> <%= friend.full_name %></td>
            <td><strong>Email: </strong> <%= friend.email %></td>
            <td>
              <strong>Actions: </strong>  <%= link_to 'View profile', user_path(friend), class: 'btn btn-sm btn-success mr-1' %>
              <% if current_user.not_friends_with?(friend.id) %>
                <%= link_to 'Follow friend?', friendships_path(friend: friend), class: "btn btn-sm btn-success", method: :post %>
              <% else %>
                <span class="badge badge-secondary">
                  Your are friends
                </span>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
<% end %>
